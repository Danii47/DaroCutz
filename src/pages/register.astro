---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Registrar Cuenta" description="Crea una cuenta para gestionar tus reservas">
  <div class="login-container">
    <div class="logo">
      <h1>¡BIENVENIDO!</h1>
    </div>

    <form id="register-form">
      <div class="form-group">
        <label for="full-name">Nombre completo</label>
        <input
          type="text"
          id="full-name"
          placeholder="Daniel del Pozo"
          required
        />
      </div>

      <div class="form-group">
        <label for="email">Correo</label>
        <input type="email" id="email" placeholder="email@gmail.com" required />
      </div>

      <div class="form-group">
        <label for="phone">Télefono</label>
        <input
          type="text"
          id="phone"
          placeholder="678123654"
          required
          maxlength="9"
          minlength="9wq"
        />
      </div>

      <div class="form-group">
        <label for="password">Contraseña</label>
        <input
          type="password"
          id="password"
          placeholder="••••••••"
          required
          minlength="6"
        />
      </div>

      <div class="form-group">
        <label for="confirm-password">Confirmar contraseña</label>
        <input
          type="password"
          id="confirm-password"
          placeholder="••••••••"
          required
          minlength="6"
        />
      </div>

      <div class="options">
        <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>
      </div>

      <button type="submit" class="btn-login">Registrar</button>

      <div class="divider">
        <span>o</span>
      </div>

      <div class="signup-link">
        ¿Ya tienes cuenta? <a href="/login">Inicia sesión</a>
      </div>
    </form>
  </div>
</Layout>

<script>
  const form = document.getElementById("register-form");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const fullName = (document.getElementById("full-name") as HTMLInputElement)?.value
    const email = (document.getElementById("email") as HTMLInputElement)?.value
    const phone = (document.getElementById("phone") as HTMLInputElement)?.value
    const password = (document.getElementById("password") as HTMLInputElement)?.value
    const confirmPassword = (document.getElementById("confirm-password") as HTMLInputElement)?.value

    if (password !== confirmPassword) {
      alert("Las contraseñas no coinciden.")
      return
    }

    const response = await fetch("/api/auth/register", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        fullName,
        email,
        phone,
        password,
        confirmPassword,
      }),
    })

    const result = await response.json()

    if (result.success) {
      alert("Registro exitoso. Un administrador te aceptará pronto.")
      window.location.href = "/login"
    } else {
      alert(`Error: ${result.error}`)
    }
  })
</script>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, sans-serif;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .login-container {
    background: #232323;
    border-radius: 16px;
    padding: 48px 40px;
    width: 100%;
    max-width: 420px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  }

  .logo {
    text-align: center;
    margin-bottom: 40px;
  }

  .logo h1 {
    color: #ffffff;
    font-size: 28px;
    font-weight: 300;
    letter-spacing: 2px;
  }

  .form-group {
    margin-bottom: 24px;
  }

  label {
    display: block;
    color: #9ca3af;
    font-size: 14px;
    margin-bottom: 8px;
    font-weight: 400;
  }

  input[type="email"],
  input[type="password"],
  input[type="number"],
  input[type="text"] {
    width: 100%;
    padding: 14px 16px;
    background: #1a1a1a;
    border: 1px solid #3a3a3a;
    border-radius: 8px;
    color: #ffffff;
    font-size: 15px;
    transition: all 0.3s ease;
    outline: none;
  }

  input[type="email"]:focus,
  input[type="password"]:focus {
    border-color: #6b7280;
    background: #1f1f1f;
  }

  input::placeholder {
    color: #4b5563;
  }

  .options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
    font-size: 14px;
  }

  .remember-me {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #9ca3af;
    cursor: pointer;
  }

  .remember-me input[type="checkbox"] {
    width: 16px;
    height: 16px;
    cursor: pointer;
    accent-color: #6b7280;
  }

  .forgot-password {
    color: #9ca3af;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .forgot-password:hover {
    color: #ffffff;
  }

  .btn-login {
    width: 100%;
    padding: 14px;
    background: #3a3a3a;
    color: #ffffff;
    border: none;
    border-radius: 8px;
    font-size: 15px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .btn-login:hover {
    background: #4a4a4a;
    transform: translateY(-1px);
  }

  .btn-login:active {
    transform: translateY(0);
  }

  .divider {
    display: flex;
    align-items: center;
    margin: 32px 0;
    color: #6b7280;
    font-size: 14px;
  }

  .divider::before,
  .divider::after {
    content: "";
    flex: 1;
    height: 1px;
    background: #3a3a3a;
  }

  .divider span {
    padding: 0 16px;
  }

  .signup-link {
    text-align: center;
    color: #9ca3af;
    font-size: 14px;
  }

  .signup-link a {
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .signup-link a:hover {
    color: #d1d5db;
  }
</style>
